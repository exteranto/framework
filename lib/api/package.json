  "author": {
    "name": "Pavel Koch",
    "email": "kouks.koch@gmail.com"
  },
  "contributors": [
    {
      "name": "Michael Bausano",
      "email": "bausanomichal@gmai.com"
    }
  ],
  "repository": "github:exteranto/api",
  "license": "MIT",
  "dependencies": {
    "@exteranto/core": "^3.0.1"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/chai-as-promised": "^7.1.0",
    "@types/chrome": "0.0.81",
    "@types/mocha": "^5.2.5",
    "@types/node": "^11.11.3",
    "@types/sinon": "^7.0.10",
    "@types/sinon-chrome": "^2.2.4",
    "@zerollup/ts-transform-paths": "^1.6.5",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
