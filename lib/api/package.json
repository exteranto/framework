    "nyc": "^13.1.0",
    "sinon": "^7.2.7",
    "sinon-chrome": "^2.3.2",
    "ts-mockito": "^2.3.1",
    "ts-node": "^8.0.1",
    "tsconfig-paths": "^3.7.0",
