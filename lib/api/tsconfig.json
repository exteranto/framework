{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "declarationDir": "types",
    "module": "commonjs",
    "noImplicitThis": true,
    "outDir": "dist",
    "removeComments": false,
    "sourceMap": true,
    "target": "es6",
    "typeRoots": ["node_modules/@types", "node_modules/web-ext-types"],
    "baseUrl": "src",
    "paths": {
      "@internal/*": ["*"]
    },
    "plugins": [
      { "transform": "@zerollup/ts-transform-paths" }
    ]
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ]
}
