{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "declarationDir": "types",
    "module": "commonjs",
    "noImplicitThis": true,
    "outDir": "dist",
    "removeComments": true,
    "sourceMap": true,
    "target": "es6",
    "typeRoots": ["node_modules/@types", "node_modules/web-ext-types"],
    "baseUrl": "src",
    "paths": {
      "@internal/browserAction": ["browserAction"],
      "@internal/cookies": ["cookies"],
      "@internal/extension": ["extension"],
      "@internal/messaging": ["messaging"],
      "@internal/permissions": ["permissions"],
      "@internal/runtime": ["runtime"],
      "@internal/storage": ["storage"],
      "@internal/tabs": ["tabs"]
    },
    "plugins": [
      { "transform": "@zerollup/ts-transform-paths" }
    ]
  },
  "include": [
    "src/**/*"
  ]
}
