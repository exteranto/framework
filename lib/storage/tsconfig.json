{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "declarationDir": "types",
    "module": "commonjs",
    "noImplicitThis": true,
    "outDir": "dist",
    "removeComments": true,
    "sourceMap": true,
    "target": "es6",
    "typeRoots": ["node_modules/@types", "node_modules/web-ext-types"]
  },
  "include": [
    "src/**/*"
  ]
}
