{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "declarationDir": "types",
    "module": "commonjs",
    "noImplicitThis": true,
    "outDir": "dist",
    "removeComments": true,
    "sourceMap": true,
    "target": "es6",
    "baseUrl": "src",
    "paths": {
      "@internal/support": [ "support" ],
      "@internal/ioc": [ "ioc" ],
      "@internal/events": [ "events" ],
      "@internal/app": [ "app" ]
    }
  },
  "include": [
    "src/**/*"
  ]
}
